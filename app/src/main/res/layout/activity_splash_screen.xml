<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_purple"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/videocall_icon2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_videocall" />

    <ImageView
        android:id="@+id/frameup_logo3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="-60dp"
        app:layout_constraintEnd_toEndOf="@+id/videocall_icon2"
        app:layout_constraintStart_toStartOf="@+id/videocall_icon2"
        app:layout_constraintTop_toBottomOf="@+id/videocall_icon2"
        app:srcCompat="@drawable/ic_frameup" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/theme_purple"
        android:hapticFeedbackEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/frameup_logo3"
        app:layout_constraintStart_toStartOf="@+id/frameup_logo3"
        app:layout_constraintTop_toBottomOf="@+id/frameup_logo3" />

</androidx.constraintlayout.widget.ConstraintLayout>